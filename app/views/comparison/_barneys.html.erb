
<div class="rowLabel">

	<% @barn.each do |barns| %>
		<div class="col-sm-4 col-xs-6">
			<div class="rowConfig">
			<% barn_img = barns.at_css('p') %>
			<img class="pictureSize" src="<%= barn_img.attribute('data-product-quickview-image') %>"><br>
			<%= barns.at_css('.name').text %><br>
			<%= barns.at_css('.standardprice').text %><br>

<%= form_tag( '/comparison/moreInfo/compare', method: "get") do %>
<%= hidden_field_tag(:price, "#{barns.at_css('.standardprice').text}")  %>

<%= hidden_field_tag(:description, "#{barns.at_css('.name').text}" )%>
<%= hidden_field_tag(:img, "#{ barn_img.attribute('data-product-quickview-image') }") %>
<%= hidden_field_tag(:store_id, "#{@store_id}") %>
<button type:submit class='btn btn-large'>Compare</button>
<% end %>
	<!-- Modal Button -->
			<button class="btn btn-info btn-sm"  data-toggle="modal" data-target="#myModal_<%= @barn.index(barns) %>">
  					Product Info
			</button>

	<!-- Modal -->
			<div class="modal fade" id="myModal_<%= @barn.index(barns) %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  				<div class="modal-dialog">
   					<div class="modal-content">
     				    <div class="modal-header">
      					  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      					 	 <h4 class="modal-title" id="myModalLabel_<%= @barn.index(barns) %>"><%= barns.at_css('.name').text %></h4>
     					</div>
    <!--Modal Body -->
     		 <div class="modal-body">
				<img src="<%= barn_img.attribute('data-product-quickview-image') %>">
     		 </div>
    <!-- Modal Bottom -->
    			  			<div class="modal-footer">
      	 					 <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
   				 	    	</div>
   		   		    </div>
  				</div>
			</div>
		</div>
</div>
	<% end %>
</div>
